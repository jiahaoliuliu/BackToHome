<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Home" />

    <TextView
        android:id="@+id/subTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="26dp"
        android:text="Native Action bar(3.0+)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/nativeStaticBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTitle1"
        android:layout_centerHorizontal="true"
        android:text="Static Back" />

    <Button
        android:id="@+id/nativeDynamicBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nativeStaticBackButton"
        android:layout_centerHorizontal="true"
        android:text="Dynamic Back" />

   <TextView
        android:id="@+id/subTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nativeDynamicBackButton"
        android:layout_marginTop="26dp"
        android:text="Action bar Sherlock"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/nonNativeStaticBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTitle2"
        android:layout_centerHorizontal="true"
        android:text="Static Back" />

    <Button
        android:id="@+id/nonNativeDynamicBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nonNativeStaticBackButton"
        android:layout_centerHorizontal="true"
        android:text="Dynamic Back" />

    
</RelativeLayout>