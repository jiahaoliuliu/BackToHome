<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Home" />

    <TextView
        android:id="@+id/subTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="26dp"
        android:text="Native Action bar(4.0+)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/nativeBackStaticalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTitle1"
        android:layout_centerHorizontal="true"
        android:text="Back Statical" />

    <Button
        android:id="@+id/nativeBackDynamicalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nativeBackStaticalButton"
        android:layout_centerHorizontal="true"
        android:text="Back Dynamical" />

   <TextView
        android:id="@+id/subTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nativeBackDynamicalButton"
        android:layout_marginTop="26dp"
        android:text="Action bar Sherlock(4.0 or lower)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/nonNativeBackStaticalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTitle2"
        android:layout_centerHorizontal="true"
        android:text="Back Statical" />

    <Button
        android:id="@+id/nonNativeBackDynamicalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nonNativeBackStaticalButton"
        android:layout_centerHorizontal="true"
        android:text="Back Dynamical" />

    
</RelativeLayout>